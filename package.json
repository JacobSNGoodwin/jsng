{
  "name": "jsng-ghost-theme",
  "version": "0.3.0",
  "description": "blog theme for jsng",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-p parcel browsersync",
    "build": "./node_modules/.bin/parcel build ./theme-js/entry.js -d ./assets --out-file theme.js --no-source-maps --experimental-scope-hoisting --no-minify",
    "parcel": "./node_modules/.bin/parcel watch ./theme-js/entry.js -d ./assets --out-file theme.js",
    "browsersync": "./node_modules/.bin/browser-sync start --config ./bs-config.js"
  },
  "keywords": [
    "blog",
    "theme",
    "ghost",
    "ghost-theme",
    "parcel",
    "starter"
  ],
  "author": {
    "name": "Jacob Goodwin",
    "email": "jacob.goodwin@gmail.com"
  },
  "config": {
    "posts_per_page": 5
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.1.3",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.7",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.10.3",
    "postcss-modules": "^1.3.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.4",
    "@fortawesome/free-brands-svg-icons": "^5.3.1",
    "@fortawesome/free-regular-svg-icons": "^5.3.1",
    "@fortawesome/free-solid-svg-icons": "^5.3.1",
    "reframe.js": "^2.2.2"
  }
}
